{% extends "base.html.twig" %}

{% block body %}
<div class='container-fluid d-flex'>
	{% if not form.vars.valid %}
		<div class="alert alert-error">
			{{ form_errors(form) }}
		</div>
		{%endif%}
        
		{{ form_start(form) }}
		{{ form_widget(form) }}
		<button type="submit">Add category</button>
		{{ form_end(form) }}
        </div>
	{% endblock %}
